{
    "compilerOptions": {
        "baseUrl": ".", // This must be specified if "paths" is.
        "moduleResolution": "node", // was not set before, but is the default
        "esModuleInterop": true,
        "paths": {
            "@root/*": ["./src/*"],
            "@routers/*": ["./src/routers/*"],
            "@tournament-routers/*": ["src/routers/tournament-routers/*"],
            "@utils/*": ["src/utils/*"],
            "@validators/*": ["src/utils/validators/*"],
            "@models/*": ["src/models/*"],
            "@db/*": ["src/db/*"],
            "@tournament/*": ["src/tournament/*"],
            "@common/*": ["src/common/*"]
        }
    },
    "include": ["./src/**/*"]

}